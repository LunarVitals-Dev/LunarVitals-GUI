/* General Styles */
* {
    font-family: 'Segoe UI', sans-serif;
    font-size: 18px;
    color: white; 
}

/* Main Window */
QMainWindow {
    background-color: white;
}

/* Toolbar/Navbar */
QToolBar {
    background-color: black;
    border: none;
    height: 60px;
    padding: 0 20px;
}

/* Navigation Buttons */
#navButton {
    background-color: #FF5733;
    color: white;
    border: none;
    border-radius: 5px;
    padding: 8px 16px;
    font-size: 18px;
    font-weight: bold;
}

#navButton:hover {
    background-color: #D94E2F;
}

/* Headers */
#pageHeader {
    color: #062a61;
    font-size: 50px;
    font-weight: bold;
    margin: 20px 0;
    padding: 12px;
    border: none;
    border-radius: 8px;
}

#subHeader {
    color: #062a61;
    font-size: 18px;
    font-weight: bold;
}

/* Combo Box Styling */
QComboBox {
    color: black;
    font-size: 18px;
    background-color: white;
    border: 1px solid gray;
    padding: 4px;
}

QComboBox::drop-down {
    border: none;
}

QComboBox QAbstractItemView {
    color: black;
    background-color: white;
    selection-background-color: lightblue;
    selection-color: black;
}

/* Button Styling */
QPushButton {
    background-color: #FF5733;
    font-size: 16px;
    color: white;
    border: none;
    padding: 10px;
}

QPushButton:hover {
    background-color: #D94E2F;
}

/* Chart Widget */
#chartWidget {
    background-color: white;
}

/* Legend for Chart */
.pg-legend {
    background-color: #062a61;
    border: 1px solid #ccc;
    font-size: 16px;
}

/* --- Styles for Data Page --- */
#dataPage QLabel {
    font-size: 18px;
    padding: 2px;
}

/* Sensor Box Styling - Now Visible */
.sensor-box {
    background-color: #f5f7fa; /* Light gray background */
    border: 2px solid #4a90e2; /* Blue border */
    border-radius: 10px; /* Rounded corners */
    padding: 15px;
    margin: 10px;
}

/* Sensor Titles */
.sensor-title {
    font-size: 24px;
    font-weight: bold;
    color: #062a61;
    margin-bottom: 20px;
}

/* Sensor Values */
.sensor-value {
    font-size: 18px;
    font-weight: bold;
    color: #333;
}

/* Center Image */
#centerImage {
    background-color: white;
    padding: 10px;
    border: 2px solid #ccc;
    border-radius: 12px;
    margin: 20px;
}

/* Grid Layout Spacing */
QGridLayout {
    spacing: 20px;
}


/* --- Intro Page Styling --- */
#introPage {
    background-color: white;
}

/* Form Container */
#introForm {
    background-color: #f5f7fa;  /* Light gray background */
    border: 2px solid #4a90e2;  /* Blue border */
    border-radius: 12px;
    padding: 25px;
    min-width: 500px;
    width: 100%;  /* Ensures the form is responsive */
    margin: 0 auto;  /* Center the form horizontally */
}

/* Title */
#introTitle {
    font-size: 36px;
    font-weight: bold;
    text-align: center;
    margin-top: 30px;
    margin-bottom: 30px;
    color: #062a61;
}

/* Form Labels */
#introForm QLabel {
    font-size: 24px;
    margin-top: 20px;
    margin-bottom: 20px;
    color: #062a61;
}

/* Input Fields */
#introForm QLineEdit,
#introForm QComboBox {
    color: #062a61;
    font-size: 18px;
    border: 1px solid #ccc;
    margin-top: 20px;
    margin-bottom: 20px;
    border-radius: 6px;
    background-color: white;
    min-width: 200px;
    width: 100%;
}

/* Submit Button */
#submitButton {
    background-color: #FF5733;
    font-size: 18px;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 12px;
    width: 100%;
    font-weight: bold;
    min-width: 200px;
    margin-top: 30px;
}

#submitButton:hover {
    background-color: #D94E2F;
}

#aboutPage {
    background-color: white; /* White background for consistency */
    padding: 20px; /* Add padding around the content */
}

#aboutTitle {
    font-size: 36px;
    font-weight: bold;
    color: #062a61; /* Dark blue color for the title */
    text-align: center;
    margin-top: 20px;
    margin-bottom: 20px;
}

#aboutText {
    font-size: 18px;
    color: #333333; /* Dark gray text for readability */
    line-height: 1.6; /* Improve readability with proper line spacing */
    padding: 15px;
    border: 2px solid #4a90e2; /* Blue border to match the theme */
    border-radius: 10px; /* Rounded corners for a clean look */
    background-color: #f5f7fa; /* Light gray background for the text area */
    margin-top: 20px;
}


